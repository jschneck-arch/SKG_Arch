# From your working tree:
sudo rsync -a --delete ./ /opt/skg/
sudo chown -R skg:skg /opt/skg

# Create venv & install deps
sudo -u skg /usr/bin/env bash -lc '
  cd /opt/skg
  python -m venv .venv
  . .venv/bin/activate
  pip install --upgrade pip wheel
  # Update requirements file first (see below), then:
  pip install -r requirements.txt
'
